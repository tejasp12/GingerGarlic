<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.gingergarlic">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_new"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheam">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".MumbaiCentralRestos"
            android:label="Mumbai Central Restos"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".MumbaiWestRestos"
            android:label="Mumbai West Restos"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".MumbaiEastRestos"
            android:label="Mumbai East Restos"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".HarbourLineRestos"
            android:label="Harbour Line Restos"
            android:parentActivityName=".MainActivity">
        </activity>
    </application>

</manifest>